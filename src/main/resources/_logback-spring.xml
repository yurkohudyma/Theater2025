<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <springProperty scope="context" name="LOG_LEVEL" source="logging.level.root" defaultValue="INFO" />

    <property name="LOG_PATTERN" value="%d{HH:mm:ss.SSS} [%thread] %highlight(%-5level) %cyan(%logger{36}) - %msg%n"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- ðŸ”§ Ð¢Ð²Ð¾Ñ— Ð¿Ð°ÐºÐµÑ‚Ð¸ -->
    <logger name="ua.hudyma" level="DEBUG"/>

    <!-- ðŸ§¹ ÐŸÑ€Ð¸Ð±Ð¸Ñ€Ð°Ñ”Ð¼Ð¾ Ð·Ð°Ð¹Ð²Ñƒ Ð±Ð°Ð»Ð°ÐºÐ°Ð½Ð¸Ð½Ñƒ -->
    <logger name="org.springframework" level="WARN"/>
    <logger name="org.hibernate" level="WARN"/>

    <root level="${LOG_LEVEL}">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
